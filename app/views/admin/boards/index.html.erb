<div class="table">
	<table class="listing" cellpadding="0" cellspacing="0">
		<tr>
							<th>title</th>
							<th>description</th>
							<th>order</th>
							<th>public</th>
					</tr>
		<% @boards.each do |board| -%>
			<tr>
									<td>
													<%= link_to "#{board.title}", admin_board_path(board) %>
											</td>
									<td>
													<%= board.description %>
											</td>
									<td>
													<%= board.order %>
											</td>
									<td>
													<%= board.public %>
											</td>
							</tr>
    <% end %>
		<% if @boards.empty? %>
      <tr>
				<td colspan="4">No records</td>
      </tr>
    <% end %>
  </table>
</div>

<div class="actions">
	<a href="<%= new_admin_board_path %>" class="action add">New Board</a>
</div>
