<div class="table">
	<table class="listing" cellpadding="0" cellspacing="0">
		<tr>
							<th>title</th>
							<th>description</th>
							<th>question_template_id</th>
							<th>survey_id</th>
					</tr>
		<% @questions.each do |question| -%>
			<tr>
									<td>
													<%= link_to "#{question.title}", admin_question_path(question) %>
											</td>
									<td>
													<%= question.description %>
											</td>
									<td>
													<%= question.question_template_id %>
											</td>
									<td>
													<%= question.survey_id %>
											</td>
							</tr>
    <% end %>
		<% if @questions.empty? %>
      <tr>
				<td colspan="4">No records</td>
      </tr>
    <% end %>
  </table>
</div>

<div class="actions">
	<a href="<%= new_admin_question_path %>" class="action add">New Question</a>
</div>
