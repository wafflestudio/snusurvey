<div id="question-<%= question._id %>">
   <% if question_template.type == 0 %>
      <%= render :partial => "questions/default_text_field_form", :locals => {:question => question, :question_template_id => question_template._id} %>
  <% elsif question_template.type == 1 %>
      <%= render :partial => "questions/checkbox_form", :locals => {:question => question, :question_template_id => question_template._id} %>
  <% elsif question_template.type == 2 %>
      <%= render :partial => "questions/radiobutton_form", :locals => {:question => question, :question_template_id => question_template._id} %>
  <% else %>
   <% end %>
   <%= link_to_function "Remove", "$('div#question-#{question._id}').remove();" %>
</div>
