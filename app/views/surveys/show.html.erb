<table class="table table-bordered">
  <tbody>
    <tr>
      <td>주제</td>
      <td colspan="3"><%= @survey.title %></td>
    </tr>
    <tr>
      <td>설명</td>
      <td colspan="3"><%= @survey.description %></td>
    </tr>
    <tr>
      <td>설문 템플릿</td>
      <td><%= @survey.survey_template.title %></td>
      <td>결과 템플릿</td>
      <td><%= @survey.result_template.title %></td>
    </tr>
  </tbody>
</table>

<h3>질문들</h3>
<% @survey.questions.each do |question| %>
  <div class="well">
    <span class="label"><%= question.question_template.title %></span>
    <div>
      <p><span class="label">질문</span> <%= question.title %></p>
      <% if !question.description.empty? %>
        <p><span class="label">설명</span><%= question.description %></p>
      <% end %>
    </div>
    <div class="question-examples">
      <%= render :partial => "examples/list", :locals => {:layout => Survey, :examples => question.examples, :question => question} %>
    </div>
  </div>
<% end %>

<%= link_to "수정 및 질문 추가하기", edit_survey_path(@survey), :class => "btn" %>
<%= link_to "삭제하기", survey_path(@survey), :method => :delete, :confirm => "Are u sure?", :class => "btn" %>
<%= link_to "결과보기", result_survey_path(@survey), :class => "btn" %>
